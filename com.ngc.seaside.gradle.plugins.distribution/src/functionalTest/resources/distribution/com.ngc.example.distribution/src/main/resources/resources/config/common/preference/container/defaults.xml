<p:preferenceDefaults xmlns:p="http://blocs.ngc.com/xsd/preference/storage">
    <!--
       The Swing Container service implementation allows for the saving of
       component location and size based on user interaction. The preference defaults
       should always be -1 in order for the service to know if the preference is
       actually set or just the default is used.
     -->
    <p:preference name="/service/container/swing/component">
        <p:attribute name="x">
            <p:default>
                <p:value type="int">-1</p:value>
            </p:default>
        </p:attribute>
        <p:attribute name="y">
            <p:default>
                <p:value type="int">-1</p:value>
            </p:default>
        </p:attribute>
        <p:attribute name="width">
            <p:default>
                <p:value type="int">-1</p:value>
            </p:default>
        </p:attribute>
        <p:attribute name="height">
            <p:default>
                <p:value type="int">-1</p:value>
            </p:default>
        </p:attribute>
        <p:attribute name="inWindow">
            <p:default>
                <p:value type="bool">false</p:value>
            </p:default>
        </p:attribute>
    </p:preference>

</p:preferenceDefaults>